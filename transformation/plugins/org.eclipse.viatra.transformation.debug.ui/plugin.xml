<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.viatra.query.tooling.ui"
            class="org.eclipse.viatra.transformation.debug.ui.util.DebugExecutableExtensionFactory:org.eclipse.viatra.transformation.debug.ui.views.ActivationBrowser"
            icon="icons/rsz_viatra_logo.png"
            id="org.eclipse.viatra.transformation.ui.debug.DisplayActivations"
            name="Activation Browser"
            restorable="true">
      </view>
      <view
            category="org.eclipse.viatra.query.tooling.ui"
            class="org.eclipse.viatra.transformation.debug.ui.util.DebugExecutableExtensionFactory:org.eclipse.viatra.transformation.debug.ui.views.TransformationViewer"
            icon="icons/rsz_viatra_logo.png"
            id="org.eclipse.viatra.transformation.ui.debug.TransformationViewer"
            name="Transformation Viewer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.viatra.transformation.ui.debug"
            name="VIATRA Debug Commands">
      </category>
      <command
            categoryId="org.eclipse.viatra.transformation.ui.debug"
            id="org.eclipse.viatra.transformation.ui.debug.addbreakpoint"
            name="Add Breakpoint">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.viatra.transformation.debug.ui.util.DebugExecutableExtensionFactory:org.eclipse.viatra.transformation.debug.ui.handlers.AddBreakpointHandler"
            commandId="org.eclipse.viatra.transformation.ui.debug.addbreakpoint">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.viatra.transformation.ui.debug.DisplayActivations">
         <separator
               name="org.eclipse.viatra.transformation.ui.separator1">
         </separator>
         <command
               commandId="org.eclipse.viatra.transformation.ui.debug.addbreakpoint"
               icon="icons/brkp_obj.gif"
               id="org.eclipse.viatra.transformation.ui.debug.addbreakpointmenu"
               label="Toggle Breakpoint"
               style="push">
         </command>
         <separator
               name="org.eclipse.viatra.transformation.ui.separator2">
         </separator>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
    <launchConfigurationTypeImage
        icon="icons/rsz_viatra_logo.png"
        configTypeID="org.eclipse.viatra.transformation.debug.launchViatraTransformation"
        id="org.eclipse.viatra.transformation.ui.debugLaunchConfigImage">
    </launchConfigurationTypeImage>
</extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.eclipse.viatra.transformation.debug.ui.launch.TransformationDebugLaunchConfigurationTabGroup"
            id="org.eclipse.viatra.transformation.ui.transformationLCTabGroup"
            type="org.eclipse.viatra.transformation.debug.launchViatraTransformation">
      </launchConfigurationTabGroup>
   </extension>
      <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="org.eclipse.viatra.transformation.debug.ui.model.DebugModelPresentation"
            id="org.eclipse.viatra.transformation.debug.model">
      </debugModelPresentation>
   </extension>

</plugin>
