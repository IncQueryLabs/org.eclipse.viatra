<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.viatra.query.tooling.ui.category"
            finalPerspective="org.eclipse.viatra.query.tooling.ui.TransformationDevPerspective"
            icon="icons/rsz_viatra_logo.png"
            id="org.eclipse.viatra.transformation.ui.wizards.transformation"
            name="Model Transformation">
            <class
                  class="org.eclipse.viatra.transformation.ui.util.XtendExecutableExtensionFactory">
               <parameter
                     name="javatype"
                     value="true">
               </parameter>
               <parameter
                     name="guicekey"
                     value="org.eclipse.viatra.transformation.ui.wizards.NewTransformationWizard">
               </parameter>
            </class>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.viatra.query.tooling.ui.TransformationDevPerspective">
         <newWizardShortcut
               id="org.eclipse.viatra.transformation.ui.wizards.transformation">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            menuGroupId="org.eclipse.viatra"
            type="new"
            wizardId="org.eclipse.viatra.transformation.ui.wizards.transformation">
         <enablement>
            <with
                  variable="activeWorkbenchWindow.activePerspective">
               <equals
                     value="org.eclipse.viatra.query.tooling.ui.TransformationDevPerspective">
               </equals>
            </with>
         </enablement>
      </commonWizard>
   </extension>
</plugin>
