<?xml version="1.0" encoding="UTF-8"?>
<!ENTITY antrunner SYSTEM "ant-runner.xml">
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
        <artifactId>org.eclipse.viatra.parent.all</artifactId>
        <groupId>org.eclipse.viatra</groupId>
        <version>1.2.0-SNAPSHOT</version>
        <relativePath>../../releng/org.eclipse.viatra.parent.all/pom.xml</relativePath>
    </parent>
	<artifactId>org.eclipse.viatra.update</artifactId>
	<packaging>eclipse-repository</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<repositoryName>VIATRA</repositoryName>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>
	   <profiles>
        <profile>
            <id>build-integration-composite</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>BUILD_TYPE</name>
                    <value>integration</value>
                </property>
            </activation>
        &antrunner;
        </profile>
        <profile>
            <id>build-milestone-composite</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>BUILD_TYPE</name>
                    <value>milestone</value>
                </property>
            </activation>
        &antrunner;
        </profile>
        <profile>
            <id>build-release-composite</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>BUILD_TYPE</name>
                    <value>release</value>
                </property>
            </activation>
        &antrunner;
        </profile>
    </profiles>
</project>